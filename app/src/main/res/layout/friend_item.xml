<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "8dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity = "center_vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_color="#FF000000"
                app:layout_constraintEnd_toStartOf="@+id/nam_surnam"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/nam_surnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img"
                android:text="Alessandra Canestrale"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:visibility="gone"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Accept"
                android:layout_below="@+id/nam_surnam"
                android:layout_toRightOf="@+id/img"
                android:textColor="@color/white"
                android:backgroundTint="@color/health_connect_blue"
                android:layout_marginTop = "10dp"
                android:id = "@+id/accept_btn"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Refuse"
                android:layout_below="@+id/nam_surnam"
                android:layout_toRightOf="@+id/accept_btn"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginTop = "10dp"
                android:id = "@+id/refuse_btn"
                />

        </RelativeLayout>

 </com.google.android.material.card.MaterialCardView>